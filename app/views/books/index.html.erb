<html>
  <body>
    <h1>Books</h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
      
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><a href="/books/<%= book.id %>">Show</a></td>
        <td><a href="/books/<%= book.id %>/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" data-method="delete" href="/books/<%= book.id %>">Destroy</a></td>
      </tr>
      <% end %>
    </table>
    
    <h2>New book</h2>
    <% if @book.errors.any? %>
      <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
    <%= form_with model: @book,url: books_path, method: :post  do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
	
      <h4>Body</h4>
      <%= f.text_area :body %>
	
      <%= f.submit 'Create Books' %>
    <% end %>
  </body>
</html>